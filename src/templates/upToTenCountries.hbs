{{#each this}}
<li class="menu__item">
    <article class="card">
        <img src="{{image}}" alt="{{name}}" class="card__image" />
        <div class="card__content">
            <h2 class="card__name">{{name}}</h2>
            <p class="card__price">
                <i class="material-icons"> monetization_on </i>
                {{price}} кредитов
            </p>

            <p class="card__descr">
                {{description}}
            </p>

        </div>

    </article>
</li>
{{/each}}